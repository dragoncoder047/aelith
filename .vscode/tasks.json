{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start dev server",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "detail": "pnpm run \"/^dev:.*/\""
        },
        {
            "label": "quit dev server",
            "command": "echo ${input:terminate}",
            "type": "shell"
        },
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}