{
    "tab": "    ",
    "arrow": {
        "left": "\u2190",
        "up": "\u2191",
        "right": "\u2192",
        "down": "\u2193"
    },
    "gamename": "[gamename]debugger[/gamename];",
    "msg": "&&lang",
    "control": "&c.&inputType",
    "c": {
        "gamepad": {
            "move": "(lstick)",
            "sprint": "\\[&button.lstick]",
            "jump": "(&button.south)",
            "aim": "(rstick)",
            "look": "(rstick)",
            "info": "(&button.north)",
            "interact": "\\[&button.lstick]",
            "throw": "\\[&button.rtrigger]",
            "invoke": "(&button.east)",
            "modify": "\\[d-pad]",
            "inventory.scroll": "\\[&button.lshoulder]/\\[&button.rshoulder]",
            "pause": "(&button.start)",
            "pMenu": {
                "switch": "\\[d-pad]",
                "select": "(&button.east)/(&button.select)",
                "back": "(&button.west)"
            },
            "manpage": {
                "scroll": "(lstick)",
                "exit": "(&button.north)"
            }
        },
        "keyboard": {
            "move": "\\[WASD]/\\[&arrow.left&arrow.right&arrow.up&arrow.down]",
            "sprint": "\\[shift]",
            "jump": "\\[space]",
            "aim": "\\[mouse]",
            "look": "\\[mouse]",
            "info": "\\[X]",
            "interact": "\\[left click]",
            "throw": "\\[right click]",
            "invoke": "\\[E]/\\[enter]",
            "modify": "\\[scroll]",
            "inventory.scroll": "\\[Z]/\\[C]",
            "pause": "\\[tab]",
            "pMenu": {
                "switch": "\\[WASD]/\\[&arrow.left&arrow.right&arrow.up&arrow.down]",
                "select": "\\[enter]",
                "back": "\\[backspace]",
                "editSubmit": "\\[enter]",
                "editCancel": "\\[esc]"
            },
            "manpage": {
                "scroll": "\\[scroll]/\\[WS]/\\[&arrow.up&arrow.down]",
                "exit": "\\[X]"
            }
        }
    },
    "button": "&&controllerType",
    "xbox": {
